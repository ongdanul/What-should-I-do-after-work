<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elice.boardproject.user.mapper.SocialUsersMapper">
    <!-- 새 사용자 계정 등록 (소셜 회원가입) -->
    <insert id="registerSocialUser" parameterType="com.elice.boardproject.user.entity.SocialUsers">
        insert into social_users (user_id, provider , provider_id)
        values (#{userId}, #{provider}, #{providerId})
    </insert>

    <!-- 특정 소셜 로그인 사용자 정보 조회 -->
    <select id="findByProviderAndProviderId" resultType="com.elice.boardproject.user.entity.SocialUsers">
        SELECT * FROM social_users
        WHERE provider = #{provider}
        AND provider_id = #{providerId}
    </select>
</mapper>