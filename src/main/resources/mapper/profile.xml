<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elice.boardproject.profile.mapper.ProfileMapper">

    <!-- 프로필 조회 -->
    <select id="findProfileByUserId" resultType="com.elice.boardproject.profile.entity.Profile">
        SELECT user_id, user_name, contact, email
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- 프로필 수정 -->
    <update id="updateProfile">
        UPDATE users
        SET contact = #{contact},
        email = #{email},
        user_pw = #{userPw}
        WHERE user_id = #{userId}
    </update>

    <select id="findPassword" resultType="String">
        SELECT user_pw FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- 프로필 삭제 (미완성) -->
    <delete id="deleteProfileByUserId">
        DELETE
        FROM users
        WHERE user_id = #{userId}
    </delete>
</mapper>
